<%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
<div class="container">
    <div class="col-7">
        <h3 class="d-inline-block bg-light px-3 ml-5 mb-5">ジャンル編集</h3><br>
        <label class="mr-5">ジャンル名</label>
        <%= f.text_field :name, class: 'mr-5' %>
        <%= f.submit '変更を保存', class: 'btn btn-success text-white font-weight-bold'%>
    </div>
</div>
<% end %>

