<div class="conatiner">
    <div class="col-9 mx-auto">
        <h3 class="d-inline-block bg-light px-3 ml-5 mb-4 float-left">商品一覧</h3>
        <%= link_to "+", new_admin_item_path, class: 'add-item p-0 btn btn-white rounded-circle border-secondary float-right' %>
        <table class="table table-borderless">
            <thead class="thead-light">
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= link_to item.name, admin_item_path(item.id), class: 'links' %></td>
                        <td><%= item.price.to_s(:delimited) %></td>
                        <td><%= item.genre.name %></td>
                        <% if item.is_active == true %>
                            <td class="text-success font-weight-bold">販売中</td>
                        <% else %>
                            <td class="text-secondary font-weight-bold">販売停止中</td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="col-3 mx-auto">
        <%= paginate @items %>
    </div>
</div>

