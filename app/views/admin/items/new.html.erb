<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <label>商品画像</label>
    <%= f.file_field :item_image, placeholder: "ファイルを選択" %><br>
    
    <label>商品名</label>
    <%= f.text_field :name, placeholder: "商品名" %><br>
    
    <label>商品説明</label>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>
    
    <label>ジャンル</label>
    <br>
    
    <label>税抜価格</label>
    <%= f.text_field :price, placeholder: "1000" %> 円<br>
    
    <label>販売ステータス</label>
    <br>
    
    <%= f.submit "新規登録" %>
    
<% end %>
    