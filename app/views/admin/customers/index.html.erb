<h1>会員一覧</h1>

<table>
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %></td>
    <!--NOT SURE-->
            <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == false %>
                <td>有効</td>
            <% else %>
                <td>退会</td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @customers %>