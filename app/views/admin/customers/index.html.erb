<div class="container px-sm-0">
    <div class="col-8 mx-auto">
        <h3 class="d-inline-block bg-light px-3 mb-3">会員一覧</h3>
    </div>
    <div class="col-7 mx-auto">
        <table class="table table-sm">
            <thead class="thead-light">
                <tr>
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.id %></td>
            <!--NOT SURE-->
                    <td><%= link_to customer.full_name, admin_customer_path(customer.id), class: 'links' %></td>
                    <td><%= customer.email %></td>
                    <% if customer.is_deleted == false %>
                        <td class="text-success font-weight-bold">有効</td>
                    <% else %>
                        <td class="text-secondary font-weight-bold">退会</td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="col-3 mx-auto">
            <%= paginate @customers %>
        </div>
    </div>
</div>


