<h1>注文履歴一覧</h1>

<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
            <td><%= order.customer.full_name %></td>
            <!--合計注文個数-->
            <td>30</td>
            <!--注文ステータス-->
            <td>入金待ち</td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @orders %>


