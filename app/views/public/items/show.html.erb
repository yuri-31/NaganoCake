<div class="container px-sm-0">
    <div class="row">
        <div class="col-2">
            <%= render 'admin/genres/genre_search', genres: @genres %>
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-5 text-center">
                    <%= image_tag @item.get_item_image(200, 300) %>
                </div>
                <div class="col-6">
                    <h4 class="mb-2"><%= @item.name %></h4>
                    <p class="mb-5"><%= @item.introduction %></p>
                    <h4 class="mb-3 d-inline-block">￥<%= @item.add_tax_price %></h4><span>(税込)</span>
                    <div>
                        <%= form_with model: @cart_item, url: new_cart_item_path, method: :post do |f| %>
                        <%= f.hidden_field :item_id, :value => @item.id %>
                        <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
                        <%= f.submit "カートに入れる", class: 'btn btn-success text-white ml-4' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



