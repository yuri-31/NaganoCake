<div class="container px-sm-0">
    <div class="row">
        <div class="col-md-2">
            <%= render 'admin/genres/genre_search', genres: @genres %>
        </div>
        <div class="col-md-6 ml-3">
            <% if params[:genre_id] %>
                <h1><%= @genre.name %>一覧</h1>
            <% else %>
                <h1>商品一覧</h1>
            <% end %>
            <p>(全<%= @items.count %>件)</p>
            
            <div class="d-flex justify-content-center mt-4">>
                <% @items.each do |item| %>
                    <%= link_to item_path(item.id) do %>
                        <%= image_tag item.get_item_image(100, 180) %><br>
                        <p><%= item.name %></p>
                        <p>￥<%= item.add_tax_price %></p>
                    <% end %>
                <% end %>
            </div>
            <%= paginate @items %>
        </div>
    </div>
</div>



