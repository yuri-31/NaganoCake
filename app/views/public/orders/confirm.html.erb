<h1>注文情報確認</h1>

<%= form_with model: @order, url: create_order_path, method: :post do |f| %>
<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th colspan="1"></th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%= image_tag cart_item.item.get_item_image(40, 70) %></td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.get_sub_total_price(cart_item.item.price).to_s(:delimited) %></td>
            <% @items_total += cart_item.get_sub_total_price(cart_item.item.price) %>
        </tr>
        <% end %>
    </tbody>
</table>

<table>
    <tbody>
        <tr>
            <th>送料</th>
            <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
            <th>商品合計</th>
            <td><%= @items_total.to_s(:delimited) %></td>
        </tr>
        <tr>
            <th>請求金額</th>
            <td><%= @order.shipping_fee + @items_total.to_s(delimited) %></td>
            <% f.hidden_field :total_price, :value => @order.shipping_fee + @items_total.to_s %>
        </tr>
    </tbody>
</table>

<h2>支払方法</h2>
<%= @order.payment_methods_i18n[:payment_method] %>

<h2>お届け先</h2>
<%= @order.delivery_postal_code %>
<%= @order.delivery_address %>
<%= @order.delivery_name %>

<%= f.submit "注文を確定する" %>

<% @cart_items