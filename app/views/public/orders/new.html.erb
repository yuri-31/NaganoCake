<h1>注文情報入力</h1>

<h2>支払方法</h2>
<%= form_with model: @order, url: create_order_path, method: :post do |f| %>
    <%= f.radio_button :payment_method, 0 %>
    <%= f.label :payment_method, "クレジットカード" %><br>
    <%= f.radio_button :payment_method, 1 %>
    <%= f.label :payment_method, "銀行振込" %><br>
    
<h2>お届け先</h2>

    <%= f.radio_button :select_address, 0 %>
    <%= f.label :select_address, "ご自身の住所" %>
        <%= current_customer.address_display %>
        
    <%= f.radio_button :select_address, 1 %>
    <%= f.label :select_address, "登録済住所から選択" %>
        <%= f.collection_select :address_id, current_customer.addresses, :id, :address_display %>
        
    <%= f.radio_button :select_address, 2 %>
    <%= f.label :select_address, "新しいお届け先" %>
        <table>
            <tbody>
                <tr>
                    <th>郵便番号(ハイフンなし)</th>
                    <td><%= f.text_field :delivery_postal_code, placeholder: "0000000" %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
                </tr>
                <tr>
                    <th>宛名</th>
                    <td><%= f.text_field :delivery_name, placeholder: "令和道子" %></td>
                </tr>
            </tbody>
        </table>
    
    <%= f.submit "確認画面へ進む" %>
    

<% end %>