<h1>注文履歴詳細</h1>

<h3>注文情報</h3>
<table>
    <tbody>
        <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
            <th>配送先</th>
            <td>
                <%= '〒' + @order.delivery_postal_code %><br>
                <%= @order.delivery_address %><br>
                <%= @order.delivery_name %>
            </td>
        </tr>
        <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
            <th>ステータス</th>
            <td><%= @order.order_status_i18n %></td>
        </tr>
    </tbody>
</table>

<h3>注文内容</h3>
<table>
    <thead>
        <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_on_purchase.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price_on_purchase * order_detail.amount).to_s(:delimited) %></td>
            <% @items_total += (order_detail.price_on_purchase * order_detail.amount) %>
        <% end %>
        </tr>
    </tbody>
</table>

<h3>請求情報</h3>
<table>
    <tbody>
        <tr>
            <th>商品合計</th>
            <td><%= @items_total.to_s(:delimited) %></td>
        </tr>
        <tr>
            <th>配送料</th>
            <td><%= @order.shipping_fee.to_s(:delimited) %></td>
        </tr>
        <tr>
            <th>ご請求額</th>
            <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
    </tbody>
</table>