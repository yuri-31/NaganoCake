<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  
  <table>
    <tbody>
      <tr>
        <th><label>名前</label></th>
        <td><%= f.label :last_name, "(姓)" %><%= f.text_field :last_name, placeholder: "令和" %></td>
        <td><%= f.label :first_name, "(名)" %><%= f.text_field :first_name, placeholder: "道子" %></td>
      </tr>
      <tr>
        <th><label>フリガナ</label></th>
        <td><%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
        <td><%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
      </tr>
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <th><%= f.label :adress, "住所" %></th>
        <td><%= f.text_field :adress, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
        <th><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
        <td><%= f.text_field :telephone_number, placeholder: "0000000000" %></td>
      </tr>
      <tr>
        <th>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
          <% end %>
        </th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th colspan="1"></th>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>からログインしてください。
