<h1>ショッピングカート</h1>
<p><%= link_to "カートを空にする", destroy_all_path  %></p>

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th colspan="1"></th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th colspan="1"></th>
            <th>小計</th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
                <td><%= image_tag cart_item.item.get_item_image(40, 70) %></td>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.add_tax_price %></td>
                <%= form_with model: cart_item, url: update_cart_item_path(cart_item.id), method: :patch do |f| %>
                    <%= f.hidden_field :item_id, :value => cart_item.item_id %>
                    <td><%= f.select :amount, *[1..10] %></td>
                    <td><%= f.submit "変更" %></td>
                <% end %>
                <td><%= cart_item.get_sub_total_price(cart_item.item.price).to_s(:delimited) %></td>
                <% @total += cart_item.get_sub_total_price(cart_item.item.price) %>
                <td><%= link_to "削除する", delete_cart_item_path(cart_item.id), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<table>
    <tbody>
        <tr>
            <th>合計金額</th>
            <td><%= @total.to_s(:delimited) %></td>
        </tr>
    </tbody>
</table>
<%= link_to "買い物を続ける", items_path %>
<%= link_to "情報入力に進む", new_order_path %>