<div class="container">
    <h4 class="d-inline-block bg-light px-3 ml-5 mb-4">会員情報編集</h4>
    <div class="col-10">
    <%= form_with model: current_customer, url: update_customer_path, method: :patch do |f| %>
        <table class="table table-borderless table-sm">
            <tbody>
                <tr>
                    <th>氏名</th>
                    <td><%= f.text_field :last_name, class: 'rounded mr-4' %><%= f.text_field :first_name, class: 'rounded' %></td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td><%= f.text_field :last_name_kana, class: 'rounded mr-4' %><%= f.text_field :first_name_kana, class: 'rounded' %></td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= f.text_field :postal_code, class: 'rounded' %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= f.text_field :address, class: 'rounded col-12' %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= f.text_field :telephone_number, class: 'rounded' %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= f.text_field :email, class: 'rounded' %></td>
                </tr>
                <tr>
                    <th colspan="1"></th>
                    <td><%= f.submit "編集内容を保存", class: 'btn btn-success text-white col-5 mr-5' %><%= link_to "退会する", unsbscribe_path, class: 'btn btn-danger text-white ml-5' %></td>
                </tr>
            </tbody>
        </table>
    <% end %>
        
    </div>
</div>



