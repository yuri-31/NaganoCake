<h1>会員情報編集</h1>

<%= form_with model: current_customer, url: update_customer_path, method: :patch do |f| %>
    <table>
        <tbody>
            <tr>
                <th>氏名</th>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
                <th>フリガナ</th>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><%= f.text_field :adress %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= f.text_field :email %></td>
            </tr>
            <tr>
                <th colspan="1"></th>
                <td><%= f.submit "編集内容を保存" %></td>
     <!--LINK NOT DONE-->
                <td><%= link_to "退会する", root_path %></td>
            </tr>
        </tbody>
    </table>
<% end %>
