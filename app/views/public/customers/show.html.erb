<div class="container">
    <h4 class="bg-light d-inline-block px-4 mb-4">マイページ</h4>
    <div class="d-flex mb-2">
        <h4 class="mb-0">登録情報</h4>
        <%= link_to '編集する', edit_customer_path, class: 'btn btn-success text-white ml-4' %>
    </div>
    <div class="row">
        <div class="col-7">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="thead-active">氏名</th>
                        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                    </tr>
                    <tr>
                        <th>カナ</th>
                        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                    </tr>
                    <tr>
                        <th>郵便番号</th>
                        <td><%= @customer.postal_code %></td>
                    </tr>
                    <tr>
                        <th>住所</th>
                        <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                        <th>電話番号</th>
                        <td><%= @customer.telephone_number %></td>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <td><%= @customer.email %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex mb-2">
        <h4>配送先</h4>
        <%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary text-white ml-4' %>
    </div>
    <div class="d-flex">
        <h4>注文履歴</h4>
        <%= link_to '一覧を見る', orders_path, class: 'btn btn-primary text-white ml-4' %>
    </div>
</div>