<h1>マイページ</h1>

<h2>登録情報</h2>
<%= link_to '編集する', edit_customer_path %>

<table>
    <tbody>
        <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
    </tbody>
</table>

<h2>配送先</h2><%= link_to '一覧を見る', addresses_path %>

<h2>注文履歴</h2><%= link_to '一覧を見る', root_path %>